#if 0
set -e
clang++ -xc++ $0 -o /tmp/setup && /tmp/setup
echo build: created build/build.ninja
exit 0
#endif
#include "../bs.h"
#include "./build.def"

int main()
{
    setup("build");
    FILE* ninja = fopen("build/build.ninja", "w");
    if (ninja == 0) {
        perror("build: could not open build/build.ninja");
        return 1;
    }
    emit_ninja(ninja, all_targets);
    fclose(ninja);
    return 0;
}
